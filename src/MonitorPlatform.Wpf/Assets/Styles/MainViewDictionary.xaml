<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="Border" x:Key="GlobalBackgroundColor">
        <Setter Property="Background" Value="#2D2D30"/>
        <Setter Property="CornerRadius" Value="5,5,0,0"/>
        <Setter Property="BorderBrush" Value="#434346"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="MenuColor">
        <Setter Property="Foreground" Value="#DEDFE0"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>
    <!--系统名称样式-->
    <Style TargetType="TextBlock" x:Key="MainTitle">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="#fff"/>
    </Style>
</ResourceDictionary>
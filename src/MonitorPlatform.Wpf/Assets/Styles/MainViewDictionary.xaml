<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="Border" x:Key="GlobalBackgroundColor">
        <Setter Property="Background" Value="#223847"/>
        <Setter Property="CornerRadius" Value="10,10,0,0"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="MenuColor">
        <Setter Property="Foreground" Value="#DEDFE0"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>
    <!--系统名称样式-->
    <Style TargetType="TextBlock" x:Key="MainTitle">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="#fff"/>
    </Style>
</ResourceDictionary>
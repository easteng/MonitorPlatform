<UserControl x:Class="MonitorPlatform.Wpf.View.Monitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonitorPlatform.Wpf.View"
             mc:Ignorable="d" 
              Width="800"
               xmlns:convert="clr-namespace:MonitorPlatform.Wpf.Converter"
              xmlns:viewmodel="clr-namespace:MonitorPlatform.Wpf.ViewModel" 
              xmlns:hc="https://handyorg.github.io/handycontrol" 
             xmlns:svg="clr-namespace:ESTControl.SvgViewer;assembly=ESTControl.SvgViewer"
                d:DataContext="{d:DesignInstance Type=viewmodel:MonitorViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Assets/Styles/GridViewStyle.xaml"/>
                <ResourceDictionary>
                    <Style TargetType="TextBlock" x:Key="BaseIcon">
                        <Setter Property="FontFamily" Value="../Assets/Fonts/#iconfont"/>
                    </Style>
                    <convert:StationType2VisibleConverter x:Key="StationType2VisibleConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Style="{StaticResource PageStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--面包屑-->
            <Grid Height="30" Background="#184868">
                <TextBlock FontFamily="Castellar" Text="系统管理 / 监测点管理" VerticalAlignment="Center" Foreground="#fff" Margin="20,0"/>
            </Grid>
            <!--工具栏-->
           
            <!--内容区域-->
            <Grid Margin="0,0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!--站点树结构-->
                <Border BorderBrush="{StaticResource FormBorderBrush}"
                        Margin="0,0,0,0"
                        BorderThickness="1">
                    <StackPanel>
                        <Grid Height="40">
                            <Button Content="添加厂区/站点"
                                    Command="{Binding OpenLeftDrawCommand}"
                                    CommandParameter="top"
                                    Margin="10,0"
                                    Height="25"
                                    Padding="10,0"
                                    HorizontalAlignment="Left" Style="{StaticResource ButtonPrimary}"/>
                        </Grid>
                        <TreeView MinHeight="300" Margin="0,5" 
                                  Height="auto"
                                  Cursor="Hand"
                                  MaxHeight="500"
                                  BorderThickness="0"
                                  BorderBrush="{StaticResource FormBorderBrush}"
                                  Background="{StaticResource FormBackground}"
                                  SelectedItemChanged="TreeView_SelectedItemChanged"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                            ItemsSource="{Binding MonitorModels}">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="25"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Type,Converter={StaticResource StationType2VisibleConverter}}" Foreground="#DAAD44" FontSize="13"  FontFamily="../Assets/Fonts/#iconfont" />
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="Bold" Foreground="#DAAD44" Margin="20,0"/>
                                        <!--<TextBlock Text="{Binding Name}" FontSize="13" VerticalAlignment="Center" FontWeight="Bold" Foreground="#DAAD44"/>-->
                                        <!--监测点添加-->
                                        <Button Grid.Column="1" Style="{StaticResource ButtonDashedSuccess}" 
                                                Visibility="{Binding IsStation ,Converter={StaticResource Boolean2VisibilityConverter}}"
                                                Content="&#xe656;" Height="15" Width="20"
                                                Name="btn_addchild"
                                                Click="btn_addchild_Click"
                                                Tag="{Binding Id}"
                                                Padding="0" FontFamily="../Assets/Fonts/#iconfont">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="添加子节点" PlacementType="TopLeft"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                        <!--监测点编辑-->
                                        <Button Grid.Column="2" Style="{StaticResource ButtonDashedWarning}" 
                                                Content="&#xe648;"  Height="15" Width="20"  Margin="1,0"
                                                Name="btn_editchild"
                                                Tag="{Binding Id}"
                                                Click="btn_editchild_Click"
                                                Padding="0" FontFamily="../Assets/Fonts/#iconfont">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="编辑" PlacementType="TopLeft"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                        <!--监测点删除-->
                                        <Button Grid.Column="3" Style="{StaticResource ButtonDashedDanger}" 
                                                Content="&#xe651;" Height="15" Width="20"  Margin="1,0"
                                                Name="btn_delete_item"
                                                Tag="{Binding Id}"
                                                Click="btn_delete_item_Click"
                                                Padding="0" FontFamily="../Assets/Fonts/#iconfont">

                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="删除" PlacementType="TopLeft"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                    </Grid>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </StackPanel>
                </Border>
                <!--站点对应数据内容-->
                <hc:TabControl  
                    Grid.Column="1" 
                    IsAnimationEnabled="True"
                    ShowCloseButton="False" 
                    Background="{StaticResource FormBackground}"
                    BorderBrush="{StaticResource FormBorderBrush}"
                    IsDraggable="True" ShowScrollButton="False" Margin="0,0,0,0"  IsScrollable="True">
                    <hc:TabItem Header="设备管理" Background="#B9BCBF" Cursor="Hand"  Foreground="#007ACC" MinWidth="200" IsSelected="True"  BorderThickness="0">
                        <Grid Background="{StaticResource FormBackground}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--分割线-->
                            <!--<hc:Divider Content="串口服务器信息" VerticalAlignment="Bottom" Margin="10,5,10,0" Padding="10,0" LineStrokeDashArray="1,1" LineStrokeThickness="1" BorderBrush="{StaticResource FormBorderBrush}" Foreground="#fff" HorizontalContentAlignment="Left"/>-->
                            <!--当前站点的设备信息-->
                            <Border Height="auto" CornerRadius="5" Grid.Row="1" Background="{StaticResource FormBorderBrush}" Margin="10,10,10,0">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                                    <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Center">
                                        <hc:TextBox
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            ShowClearButton="True"
                                            Background="{StaticResource FormBackground}" 
                                            BorderBrush="{StaticResource FormBorderBrush}"
                                            Foreground="{StaticResource FormForeground}"
                                            hc:InfoElement.TitleWidth="60" 
                                            hc:InfoElement.Placeholder="请输入设备名称" 
                                            hc:InfoElement.Title="设备名称:" 
                                            hc:InfoElement.TitlePlacement="Left"
                                            Width="200"
                                            Text="{Binding DeviceModel.Name}"
                                            Margin="10,0,0,0"/>
                                        <hc:TextBox
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            ShowClearButton="True"
                                            Background="{StaticResource FormBackground}" 
                                            BorderBrush="{StaticResource FormBorderBrush}"
                                            Foreground="{StaticResource FormForeground}"
                                            hc:InfoElement.TitleWidth="50" 
                                            hc:InfoElement.Placeholder="请输入服务器IP" 
                                            hc:InfoElement.Title="服务IP:" 
                                            hc:InfoElement.TitlePlacement="Left"
                                            Width="200"
                                            Text="{Binding DeviceModel.IpAddress}"
                                            Margin="10,0,0,0"/>
                                        <hc:TextBox
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            ShowClearButton="True"
                                            Background="{StaticResource FormBackground}" 
                                            BorderBrush="{StaticResource FormBorderBrush}"
                                            Foreground="{StaticResource FormForeground}"
                                            hc:InfoElement.TitleWidth="60" 
                                            hc:InfoElement.Placeholder="端口" 
                                            hc:InfoElement.Title="服务端口:" 
                                            hc:InfoElement.TitlePlacement="Left"
                                            Width="150"
                                            Text="{Binding DeviceModel.Port}"
                                            Margin="10,0,0,0"/>
                                        <hc:ComboBox ItemsSource="{Binding DeviceTypes}"
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            Name="collection_type"
                                            ShowClearButton="True"
                                            hc:ItemContainerStyle="{StaticResource hc-comboBoxStyle}"
                                            hc:InfoElement.TitleWidth="60"
                                            SelectedValue="{Binding DeviceModel.Type}"
                                            Style="{StaticResource ComboBoxExtend}"
                                            Background="{StaticResource FormBackground}" 
                                            BorderBrush="{StaticResource FormBorderBrush}"
                                            Foreground="{StaticResource FormForeground}"
                                            hc:InfoElement.Placeholder="请选择" 
                                            hc:InfoElement.TitlePlacement="Left" 
                                            hc:InfoElement.Title="采集模式:" 
                                            SelectionChanged="collection_type_SelectionChanged"
                                            Width="180"
                                            Margin="10,0">
                                        </hc:ComboBox>                                        
                                        <hc:ComboBox ItemsSource="{Binding Protocols}"
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            Name="ptotoco"
                                            ShowClearButton="True"
                                            hc:ItemContainerStyle="{StaticResource hc-comboBoxStyle}"
                                            hc:InfoElement.TitleWidth="60"
                                            SelectedValue="{Binding DeviceModel.Ptotocol}"
                                            Style="{StaticResource ComboBoxExtend}"
                                            Background="{StaticResource FormBackground}" 
                                            BorderBrush="{StaticResource FormBorderBrush}"
                                            Foreground="{StaticResource FormForeground}"
                                            hc:InfoElement.Placeholder="请选择" 
                                            hc:InfoElement.TitlePlacement="Left" 
                                            hc:InfoElement.Title="协议类型:" 
                                                     SelectionChanged="ptotoco_SelectionChanged"
                                            Width="160"
                                            Margin="10,0">
                                        </hc:ComboBox>
                                        <hc:TextBox
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            ShowClearButton="True"
                                            Background="{StaticResource FormBackground}" 
                                            BorderBrush="{StaticResource FormBorderBrush}"
                                            Foreground="{StaticResource FormForeground}"
                                            hc:InfoElement.TitleWidth="60" 
                                            hc:InfoElement.Placeholder="温度" 
                                            hc:InfoElement.Title="预警温度:" 
                                            hc:InfoElement.TitlePlacement="Left"
                                            Width="140"
                                            Text="{Binding DeviceModel.WarnValue}"
                                            Margin="0,0,0,0"/>
                                        <hc:TextBox
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            ShowClearButton="True"
                                            Background="{StaticResource FormBackground}" 
                                            BorderBrush="{StaticResource FormBorderBrush}"
                                            Foreground="{StaticResource FormForeground}"
                                            hc:InfoElement.TitleWidth="60" 
                                            hc:InfoElement.Placeholder="温度" 
                                            hc:InfoElement.Title="报警温度:" 
                                            hc:InfoElement.TitlePlacement="Left"
                                            Width="140"
                                            Text="{Binding DeviceModel.AlertValue}"
                                            Margin="10,0,0,0"/>
                                        <hc:TextBox
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            ShowClearButton="True"
                                            Background="{StaticResource FormBackground}" 
                                            BorderBrush="{StaticResource FormBorderBrush}"
                                            Foreground="{StaticResource FormForeground}"
                                            hc:InfoElement.TitleWidth="60" 
                                            hc:InfoElement.Placeholder="温度" 
                                            hc:InfoElement.Title="容错温度:" 
                                            hc:InfoElement.TitlePlacement="Left"
                                            Width="140"
                                            Text="{Binding DeviceModel.TolerantValue}"
                                            Margin="10,0,10,0"/>
                                        <Button FontSize="15" Content="&#xe612;"
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            FontFamily="../Assets/Fonts/#iconfont"
                                            Command="{Binding SaveDeviceCommand}"
                                                CommandParameter="{Binding DeviceModel}"
                                            Style="{StaticResource ButtonDashedInfo}"
                                            Cursor="Hand"
                                            Margin="0,0,10,0"
                                            Padding="10,0" Height="26" VerticalAlignment="Center">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="保存数据" hc:Foreground="#326CF3" PlacementType="Top"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                        <Button FontSize="15" Content="&#xe626;"
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            FontFamily="../Assets/Fonts/#iconfont"
                                            x:Name="btn_chche_update"
                                            Click="btn_chche_update_Click"
                                            Style="{StaticResource ButtonDashedSuccess}"
                                            Cursor="Hand"
                                            Margin="0,0,10,0"
                                            Padding="10,0" Height="26" VerticalAlignment="Center">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="数据同步" hc:Foreground="#326CF3" PlacementType="Top"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                        <Button FontSize="15" Content="&#xe629;"
                                            IsEnabled="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                            FontFamily="../Assets/Fonts/#iconfont"
                                            x:Name="btn_remote_start"
                                            Click="btn_remote_start_Click"
                                            Style="{StaticResource ButtonDashedDanger}"
                                            Cursor="Hand"
                                            Margin="0,0,10,0"
                                            Padding="10,0" Height="26" VerticalAlignment="Center">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="远程重启" hc:Foreground="#326CF3" PlacementType="Top"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                    </StackPanel>
                                </ScrollViewer>
                              
                            </Border>
                            <!--分割线-->
                            <!--<hc:Divider Grid.Row="2" Content="传感器*采集终端信息" VerticalAlignment="Bottom" Margin="10,5,10,0" Padding="10,0" LineStrokeDashArray="1,1" LineStrokeThickness="1" BorderBrush="{StaticResource FormBorderBrush}" Foreground="#fff" HorizontalContentAlignment="Left"/>-->
                            <!--传感器及采集器信息-->
                            <TabControl Grid.Row="3"  TabStripPlacement="Left" Height="auto" Margin="10,10,10,0" BorderThickness="0,1,1,0" BorderBrush="{StaticResource FormBorderBrush}"  Background="{StaticResource FormBackground}">
                                <TabItem Header="传感器管理">
                                    <Border Background="{DynamicResource FormBackground}">
                                        <!--传感器列表-->
                                        <Grid Margin="0,0" Grid.Row="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="30"/>
                                            </Grid.RowDefinitions>
                                            <!--工具栏-->
                                            <StackPanel Margin="5,0" Orientation="Horizontal" Height="40" Grid.Row="0">
                                                <Button
                                                    x:Name="btn_addsensor"
                                                    Click="btn_addsensor_Click"
                                                    Content="添加"
                                                    Command="{Binding CreateCommand}"
                                                    CommandParameter="true"
                                                    Margin="5" Style="{StaticResource ButtonPrimary}" Width="60" Height="30" Padding="10,0"/>
                                            </StackPanel>
                                            <!--传感器列表-->
                                            <ListView 
                                                Grid.Row="1"
                                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                ItemsSource="{Binding SensorModels}" 
                                                Style="{StaticResource DefaultListView}">
                                                <ListView.View>
                                                    <GridView ColumnHeaderContainerStyle="{StaticResource DefaultGridViewColumnHeader}">
                                                        <GridViewColumn HeaderContainerStyle="{StaticResource CenterGridViewColumnHeader}"  Width="80"  Header="序号" DisplayMemberBinding="{Binding Index}"/>
                                                        <GridViewColumn Width="100" Header="传感器编号" DisplayMemberBinding="{Binding SensorCode}"/>
                                                        <GridViewColumn Width="200" Header="安装位置" DisplayMemberBinding="{Binding Position}"/>
                                                        <GridViewColumn HeaderContainerStyle="{StaticResource CenterGridViewColumnHeader}" Width="250" Header="操作">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                        <Button
                                                                           Content="编辑"
                                                                           Name="btn_edit_sensor"
                                                                            Click="btn_edit_sensor_Click"
                                                                           Cursor="Hand"
                                                                           Tag="{Binding Id}"
                                                                           Margin="5,0" Style="{StaticResource ButtonSuccess}" Width="40" Height="20" Padding="5,0"/>
                                                                        <Button
                                                                           Content="删除"
                                                                           Name="btn_delete_sensor"
                                                                            Click="btn_delete_sensor_Click"
                                                                           Cursor="Hand"
                                                                           Tag="{Binding Id}"
                                                                           Margin="5,0" Style="{StaticResource ButtonDanger}" Width="40" Height="20" Padding="5,0"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                            <!--总数据条数-->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                                                <TextBlock Foreground="#fff">当前数据：</TextBlock>
                                                <TextBlock Foreground="#fff" Text="{Binding SensorList.Count}"/>
                                                <TextBlock Foreground="#fff">条</TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </TabItem>
                                <TabItem Header="采集器管理">
                                    <Border Background="{DynamicResource FormBackground}">
                                        <!--采集器-->
                                        <Grid Margin="0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="30"/>
                                            </Grid.RowDefinitions>
                                            <!--工具条-->
                                            <StackPanel Margin="5,0" Orientation="Horizontal" Height="40" Grid.Row="0">
                                                <Button
                                                    x:Name="btn_addterminal"
                                                    Click="btn_addterminal_Click"
                                                    Content="添加"
                                                    Margin="5" Style="{StaticResource ButtonPrimary}" Width="60" Height="30" Padding="10,0"/>
                                            </StackPanel>
                                            <!--采集器列表-->
                                            <ListView 
                                                Grid.Row="1"
                                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                ItemsSource="{Binding Terminals}"  Style="{StaticResource DefaultListView}">
                                                <ListView.View>
                                                    <GridView ColumnHeaderContainerStyle="{StaticResource DefaultGridViewColumnHeader}">
                                                        <GridViewColumn HeaderContainerStyle="{StaticResource CenterGridViewColumnHeader}"  Width="80"  Header="序号" DisplayMemberBinding="{Binding Index}"/>
                                                        <GridViewColumn Width="100" Header="采集器名称" DisplayMemberBinding="{Binding Name}"/>
                                                        <GridViewColumn Width="200" Header="地址位" DisplayMemberBinding="{Binding Addr}"/>
                                                        <GridViewColumn HeaderContainerStyle="{StaticResource CenterGridViewColumnHeader}" Width="250" Header="操作">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                        <Button
                                                                           Content="编辑"
                                                                           Name="btn_edit_terminal"
                                                                            Click="btn_edit_terminal_Click"
                                                                           Cursor="Hand"
                                                                           Tag="{Binding Id}"
                                                                           Margin="2,0,2,0" Style="{StaticResource ButtonSuccess}" Width="40" Height="20" Padding="2,0"/>
                                                                        <Button
                                                                           Content="删除"
                                                                           Name="btn_delete_terminal"
                                                                           Cursor="Hand"
                                                                            Click="btn_delete_terminal_Click"
                                                                           Tag="{Binding Id}"
                                                                           Margin="2,0" Style="{StaticResource ButtonDanger}" Width="40" Height="20" Padding="2,0"/>
                                                                        <Button
                                                                           Content="查看传感器"
                                                                           Name="btn_view_sensor"
                                                                           Cursor="Hand"
                                                                            Click="btn_view_sensor_Click"
                                                                           Tag="{Binding Id}"
                                                                           Margin="2,0" Style="{StaticResource ButtonDashedWarning}" Width="80" Height="20" Padding="2,0"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                            <!--总数据条数-->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                                                <TextBlock Foreground="#fff">当前数据：</TextBlock>
                                                <TextBlock Foreground="#fff" Text="{Binding TerminalList.Count}"/>
                                                <TextBlock Foreground="#fff">条</TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </hc:TabItem>
                    <hc:TabItem Header="一次行图配置" Background="#B9BCBF" Cursor="Hand"   Foreground="#008DEE" BorderThickness="0">
                        <hc:SimplePanel Background="{StaticResource FormBackground}">
                            <Border Grid.Column="1" 
                        Margin="0"
                        BorderBrush="{StaticResource FormBorderBrush}" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <Button IsEnabled="{Binding ConfigModel.CanUpload}" FontSize="15" Content="&#xe61f;" FontFamily="../Assets/Fonts/#iconfont" Name="brnConfigTemp" Click="brnConfigTemp_Click" Margin="5,0" Style="{StaticResource ButtonPrimary}" Padding="10,0" Height="25">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="配置温度模板" hc:Foreground="Red" PlacementType="Top"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                        <Button IsEnabled="{Binding ConfigModel.CanUpload}"  FontSize="15"  Command="{Binding GetConfigCommand}" Content="&#xe6b4;" FontFamily="../Assets/Fonts/#iconfont" Margin="1,0" Style="{StaticResource ButtonSuccess}" Padding="10,0" Height="25">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="查看配置" hc:Foreground="Red" PlacementType="Top"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                        <Button IsEnabled="{Binding ConfigModel.CanUpload}" FontSize="15" Content="&#xe603;" FontFamily="../Assets/Fonts/#iconfont" Name="uploadImg" Click="uploadImg_Click" Margin="5,0" Style="{StaticResource ButtonDanger}" Padding="10,0" Height="25">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="上传图纸" hc:Foreground="Red" PlacementType="Top"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                        <TextBlock  Text="是否编辑:" Margin="10,0" VerticalAlignment="Center" Foreground="#fff"/>
                                        <ToggleButton IsEnabled="{Binding ConfigModel.CanUpload}" Unchecked="ToggleButton_Unchecked" Checked="ToggleButton_Checked" IsChecked="{Binding ConfigModel.IsEdit}" Height="20" Margin="5,5" HorizontalAlignment="Center" Style="{StaticResource ToggleButtonSwitch}"/>
                                        <TextBlock  Text="图形名称:" Margin="10,0" VerticalAlignment="Center" Foreground="#fff"/>
                                        <hc:TextBox 
                                 Background="{StaticResource FormBackground}"
                                 BorderBrush="{StaticResource FormBorderBrush}"
                                 hc:Foreground="#fff"
                                 IsReadOnly="{Binding ConfigModel.CanUpload,Converter={StaticResource Boolean2BooleanReConverter}}"
                                 hc:InfoElement.Necessary="True"
                                 Width="150"
                                 Height="25"
                                 ShowClearButton="True" Text="{Binding ConfigModel.PicName}"/>
                                        <Button IsEnabled="{Binding ConfigModel.CanUpload}" FontSize="18" Content="&#xe60b;" FontFamily="../Assets/Fonts/#iconfont" Name="btnSavePic" Click="btnSavePic_Click" Margin="5,0" Style="{StaticResource ButtonPrimary}" Padding="10,0" Height="25">
                                            <hc:Poptip.Instance>
                                                <hc:Poptip Content="保存数据" hc:Foreground="Red" PlacementType="Top"/>
                                            </hc:Poptip.Instance>
                                        </Button>
                                    </StackPanel>
                                    <!--svg 图片显示区域-->
                                    <Grid Grid.Row="1">
                                        <svg:DrawingPage x:Name="SvgContainer" ViewerModel="View"  Grid.Row="1" CustomColor="#1E1E1E"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </hc:SimplePanel>
                    </hc:TabItem>
                </hc:TabControl>
             
            </Grid>

            <!--顶部抽屉  温度点配置-->
            <hc:Drawer Name="DrawerRight" MaskCanClose="False" Dock="Top" IsOpen="{Binding RightShow}">
                <Border Margin="0,70,5,0" Background="{DynamicResource FormBackground}" Width="400" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border Background="#005B99">
                            <TextBlock Margin="0,0,0,0" Text="监测点属性" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#fff" FontSize="16"/>
                        </Border>
                        <StackPanel Grid.Row="1" Margin="20,0">
                            <hc:TextBox
                                Background="{StaticResource FormBackground}" 
                                BorderBrush="{StaticResource FormBorderBrush}"
                                Foreground="{StaticResource FormForeground}"
                                hc:InfoElement.TitleWidth="80" 
                                hc:InfoElement.Placeholder="请输入名称" 
                                hc:InfoElement.Title="温度名称" 
                                hc:InfoElement.Necessary="True" 
                                hc:InfoElement.TitlePlacement="Left" 
                                Text="{Binding DiagramConfigModel.PointName}"
                                Margin="0,16,0,0"/>
                            <!--<hc:TextBox
                                Background="{StaticResource FormBackground}" 
                                BorderBrush="{StaticResource FormBorderBrush}"
                                Foreground="{StaticResource FormForeground}"
                                hc:InfoElement.TitleWidth="80" 
                                hc:InfoElement.Placeholder="测温度属性" 
                                hc:InfoElement.Title="温度属性" 
                                hc:InfoElement.Necessary="True" 
